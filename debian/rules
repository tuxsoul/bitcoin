#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1




CFLAGS = -Wall -g

ifneq (,$(findstring noopt,$(DEB_BUILD_OPTIONS)))
	CFLAGS += -O0
else
	CFLAGS += -O2
endif

configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.
	# This package not need configure
	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp 
	dh_testdir

	# Add here commands to compile the package.
	$(MAKE) -f makefile.unix bitcoind
	#docbook-to-man debian/bitcoin.sgml > bitcoin.1

	# build bitcoind(1) manpage
	asciidoc -b docbook -d manpage -o debian/manpages/bitcoind.xml \
		debian/manpages/bitcoind.txt
	xmlto -o debian/manpages/ man debian/manpages/bitcoind.xml

	# build bitcoin.conf(5) manpage
	asciidoc -b docbook -d manpage -o debian/manpages/bitcoin.conf.xml \
		debian/manpages/bitcoin.conf.txt
	xmlto -o debian/manpages/ man debian/manpages/bitcoin.conf.xml


	touch $@

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	[ ! -f makefile.unix ] || $(MAKE) -f makefile.unix clean

	# remove manpages (not source txt files)
	rm -f debian/manpages/bitcoind.{1,xml}
	rm -f debian/manpages/bitcoin.conf.{5,xml}

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_clean -k 
	dh_installdirs

	# Add here commands to install the package into debian/bitcoin.
	#$(MAKE) DESTDIR=$(CURDIR)/debian/bitcoind install


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs debian/Changelog.1
	dh_installdocs
	dh_installexamples debian/examples/*
	dh_install
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
#	dh_installcron
#	dh_installinfo
	dh_installman
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
#	dh_perl
#	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
